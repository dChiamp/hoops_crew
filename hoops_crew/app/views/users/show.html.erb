Player Profile
<div>
  <h1>  <%= @user.name %> </h1> 
  <div> Prof Pic: <%= @user.pic %> </div>
  <div> Origin: <%= @user.origin %> </div>
  <div> Hood: <%= @user.neighborhood %> </div>
  <div> Bio: <%= @user.bio %> </div>
  <div> Email: <%= @user.email %> </div>
</div>

<br>

<% if authorize? %>
  <%= button_to "see all playas", users_path, method: :get, class: "btn btn-secondary btn-sm"%>
  <%= button_to "Edit user", edit_user_path(@user), method: :get, class: "btn btn-secondary btn-sm" %>
  <%= button_to "Delete user", @user, method: :delete, class: "btn btn-danger btn-sm" %>
  <%= button_to "logout", logout_user_path(@user), method: :delete, class: "btn btn-secondary btn-sm" %>
<%else%>
  <%= link_to "see all playas", "/users" %>
<% end %>


